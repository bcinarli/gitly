{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "React": true,
    "ReactDOM": true
  },
  "rules": {
    "no-console": "off",
    "no-undef": "off",
    "no-unused-vars": "off"
  }
}

